{
    "name": "Tagioalisi Bot Devcontainer",
    "dockerComposeFile": "../docker-compose.dev.yml",
    "service": "discordbot-dev",
    "runServices": [
        "db"
    ],
    "workspaceFolder": "/home/developer/tagioalisi-bot",
    "overrideCommand": true,

    // leave the containers running when VS Code closes 
    // which prevents you from accidentally shutting down both containers by closing one window
    "shutdownAction": "none",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode-remote.remote-ssh",
                "eamodio.gitlens",
                "yzhang.markdown-all-in-one",
                "redhat.vscode-yaml",
                "mikestead.dotenv",
                "wdhongtw.gpg-indicator",
                "foxundermoon.shell-format",
                "github.vscode-pull-request-github",
                "ms-azuretools.vscode-docker",
                "ms-vscode.remote-repositories",
                "zxh404.vscode-proto3",
                "golang.go"
            ],
            "settings": {
                "git.enableCommitSigning": true,
                "git-graph.repository.commits.showSignatureStatus": true,
                "git-graph.repository.sign.commits": true,
                "git-graph.repository.sign.tags": true,
                "terminal.integrated.shellIntegration.enabled": false
            }
        }
    }
}