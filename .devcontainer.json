{
    "name": "Tagioalisi Devcontainer",
    "dockerComposeFile": "docker-compose.yml",
    "workspaceFolder": "/home/developer/tagioalisi-bot",
    "service": "devcontainer",
    "remoteUser": "developer",
    "containerUser": "developer",
    "overrideCommand": true,
    // leave the containers running when VS Code closes 
    "shutdownAction": "stopCompose",
    "updateContentCommand": {
        // Download Go dependencies to local cache
        //"go-cache-deps": "cd /home/developer/tagioalisi-bot/discordbot && go mod download",
        // Install Webapp deps
        "webapp-deps": "cd /home/developer/tagioalisi-bot/webapp && npm i"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode-remote.remote-ssh",
                "eamodio.gitlens",
                "yzhang.markdown-all-in-one",
                "redhat.vscode-yaml",
                "mikestead.dotenv",
                "wdhongtw.gpg-indicator",
                "foxundermoon.shell-format",
                "github.vscode-pull-request-github",
                "ms-azuretools.vscode-docker",
                "ms-vscode.remote-repositories",
                "zxh404.vscode-proto3",
                "golang.go",
                "michelemelluso.code-beautifier",
                "mrmlnc.vscode-scss",
                "pmneo.tsimporter",
                "stringham.move-ts",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "Vue.volar"
            ],
            "settings": {
                "remote.containers.cacheVolume": true // Speeds up extension install
            }
        }
    }
}